import random

def play_game():
    print("ðŸŽ® Welcome to Rock-Paper-Scissors! ðŸŽ®")
    print("Instructions: Type rock, paper, or scissors to play.")

    user_score = 0
    computer_score = 0

    while True:
        # User input
        user_choice = input("\nEnter your choice (rock/paper/scissors): ").lower()
        if user_choice not in ["rock", "paper", "scissors"]:
            print("âŒ Invalid choice. Please try again.")
            continue

        # Computer choice
        computer_choice = random.choice(["rock", "paper", "scissors"])
        print(f"ðŸ§‘ You chose: {user_choice}")
        print(f"ðŸ’» Computer chose: {computer_choice}")

        # Game logic
        if user_choice == computer_choice:
            print("âš–ï¸ It's a tie!")
        elif (user_choice == "rock" and computer_choice == "scissors") or \
             (user_choice == "scissors" and computer_choice == "paper") or \
             (user_choice == "paper" and computer_choice == "rock"):
            print("âœ… You win this round!")
            user_score += 1
        else:
            print("âŒ You lose this round!")
            computer_score += 1

        # Display score
        print(f"ðŸ“Š Score -> You: {user_score} | Computer: {computer_score}")

        # Play again?
        play_again = input("Do you want to play again? (yes/no): ").lower()
        if play_again != "yes":
            print("\nðŸ Final Score:")
            print(f"ðŸ§‘ You: {user_score} | ðŸ’» Computer: {computer_score}")
            if user_score > computer_score:
                print("ðŸŽ‰ Congratulations! You are the overall winner!")
            elif user_score < computer_score:
                print("ðŸ˜¢ The computer wins this time!")
            else:
                print("ðŸ¤ It's a draw overall!")
            break

# Run the game
play_game()
